---
import '@fontsource/league-spartan';
import '../styles/global.css';
import rosaImage from '../images/rosa.jpg';
const { pageTitle, pageDescription } = Astro.props;
---

<html lang="en" class="h-full w-full" data-theme="night">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="me" href="https://tech.lgbt/@cosmicrose" />

    <meta name="description" content="Rosa's Website">

    <meta property="og:url" content="https://cosmicrose.dev/">
    <meta property="og:type" content="website">
    <meta property="og:title" content={pageTitle}>
    <meta property="og:description" content={pageDescription}>
    <meta property="og:image" content={new URL(rosaImage.src, Astro.url)}>

    <meta name="twitter:card" content="summary">
    <meta property="twitter:domain" content="cosmicrose.dev">
    <meta property="twitter:url" content="https://cosmicrose.dev/">
    <meta name="twitter:title" content={pageTitle}>
    <meta name="twitter:description" content={pageDescription}>
    <meta name="twitter:image" content={new URL(rosaImage.src, Astro.url)}>

    <meta name="fediverse:creator" content="@cosmicrose@tech.lgbt" />

		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
    <script data-goatcounter="https://cosmicrose.goatcounter.com/count"
        async src="//gc.zgo.at/count.js"></script>
		<title>{pageTitle}</title>
    <link rel="alternate" type="application/rss+xml"
      title="RSS Feed for cosmicrose.dev"
      href="/rss.xml/" />
    <link rel="sitemap" href="/sitemap-index.xml" />
	</head>
  <body class="h-full w-full">
    <slot />
	</body>
</html>
