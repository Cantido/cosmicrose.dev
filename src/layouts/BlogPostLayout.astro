---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navigation from '../components/Navigation.astro';
const { frontmatter } = Astro.props;
---
<BaseLayout pageTitle={frontmatter.title}>
  <Navigation />
  <article class="prose prose-slate prose-invert p-4">
    <header>
      <h1 class="mb-0">{frontmatter.title}</h1>

      <p class="mt-2 italic text-slate-400">by Rosa Richter</p>
    </header>

    <slot />

    <footer class="">
      <div class="text-sm text-slate-400 text-center">
        &copy; 2024.
        This work is openly licensed via <a href="https://creativecommons.org/licenses/by/4.0/">CC BY 4.0</a>.
      </div>
    </footer>
  </article>
</BaseLayout>
